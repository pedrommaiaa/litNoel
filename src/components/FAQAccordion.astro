---
export interface Props {
  items?: Array<{ q: string; a: string }>;
}
const defaultItems = [
  { q: 'How long does installation take?', a: 'Most homes take 3–6 hours depending on size and complexity. Larger commercial projects may take a full day.' },
  { q: 'Do you provide the lights?', a: 'Yes. We provide commercial‑grade LED lights and all materials, and we handle installation, maintenance, and removal.' },
  { q: 'What happens if lights go out during the season?', a: 'Just call us. We repair or replace any issues quickly, typically within 24–48 hours.' },
  { q: 'When do you remove the lights?', a: 'We typically schedule removal in early January and work with your preferred timing and any HOA requirements.' },
  { q: 'Do I need to be home during installation or removal?', a: 'Not required. We coordinate timing with you and handle everything professionally.' },
];
const { items = defaultItems } = Astro.props;
---

<section class="py-16 bg-white" id="faq">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-6 text-gray-900">Frequently Asked Questions</h2>
    <div class="max-w-3xl mx-auto divide-y divide-gray-200 bg-white rounded-lg shadow">
      {items.map((it, i) => (
        <details class={`group p-5 ${i===0 ? 'open' : ''}`}>
          <summary class="flex cursor-pointer list-none items-center justify-between text-left">
            <span class="text-lg font-semibold text-gray-900">{it.q}</span>
            <span class="ml-4 text-gray-500 group-open:rotate-180 transition-transform">⌄</span>
          </summary>
          <div class="mt-3 text-gray-700">{it.a}</div>
        </details>
      ))}
    </div>
  </div>
</section>


