---
import { companyData } from '../data/company';
---

<footer class="bg-gray-900 text-white pb-8 sm:pb-0">
  <div class="container-max section-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 md:gap-8">
      <!-- Company Info -->
      <div class="flex flex-col items-center lg:items-start text-center lg:text-left">
        <h3 class="text-2xl font-bold mb-4 text-gradient-footer">{companyData.name}</h3>
        <p class="text-gray-300 mb-6 max-w-md">
          Professional Christmas light installation. We handle everything from design to takedown, bringing holiday magic to your home stress-free.
        </p>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col items-center lg:items-start text-center lg:text-left">
        <h4 class="text-lg font-semibold mb-6 text-white">Contact Us</h4>
        <div class="space-y-4 w-full">
          <a 
            href={`tel:${companyData.phone}`}
            class="flex items-center justify-center lg:justify-start text-gray-300 hover:text-white transition-colors group text-base py-2"
          >
            <div>
              <div class="text-sm text-gray-400">Call Us</div>
              <div class="font-medium">{companyData.phoneFormatted}</div>
            </div>
          </a>
          <a 
            href={`mailto:${companyData.email}`}
            class="flex items-center justify-center lg:justify-start text-gray-300 hover:text-white transition-colors group text-base py-2"
          >
            <div>
              <div class="text-sm text-gray-400">Email Us</div>
              <div class="font-medium">{companyData.email}</div>
            </div>
          </a>
          <div class="flex items-center justify-center lg:justify-start text-gray-300 text-base py-2">
            <div>
              <div class="text-sm text-gray-400">Service Area</div>
              <div class="font-medium">Greater Metro Area</div>
            </div>
          </div>
        </div>
        <!-- Business Hours -->
        <div class="mt-6 w-full">
          <h5 class="text-sm font-semibold mb-3 text-white text-center lg:text-left">
            ðŸŽ„ Holiday Season Hours
          </h5>
          <div class="space-y-2 text-sm text-center lg:text-left">
            <div class="lg:flex lg:justify-between text-gray-300">
              <div class="font-medium">Mon - Fri</div>
              <div class="lg:ml-4">{companyData.hours.monday}</div>
            </div>
            <div class="lg:flex lg:justify-between text-gray-300">
              <div class="font-medium">Saturday</div>
              <div class="lg:ml-4">{companyData.hours.saturday}</div>
            </div>
            <div class="lg:flex lg:justify-between text-gray-300">
              <div class="font-medium">Sunday</div>
              <div class="lg:ml-4">{companyData.hours.sunday}</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Service Areas -->
      <div class="flex flex-col items-center lg:items-start text-center lg:text-left">
        <h4 class="text-lg font-semibold mb-6 text-white">Service Areas</h4>
        <div class="grid grid-cols-1 gap-1 text-sm text-gray-300 mb-6">
          <div class="hover:text-white transition-colors">Cobb County</div>
          <div class="hover:text-white transition-colors">Paulding County</div>
          <div class="hover:text-white transition-colors">Douglas County</div>
          <div class="hover:text-white transition-colors">Carroll County</div>
        </div>
      </div>

      <!-- Quick Links, Legal & Social -->
      <div class="flex flex-col items-center lg:items-start text-center lg:text-left gap-6">
        <div>
          <h5 class="text-sm font-semibold mb-3 text-white">Quick Links</h5>
          <div class="space-y-2 text-base">
            <a href="#services" class="block text-gray-300 hover:text-white transition-colors py-2">
              ðŸŽ„ Our Services
            </a>
            <a href="#service-areas" class="block text-gray-300 hover:text-white transition-colors py-2">
              Service Areas
            </a>
            <a href="#contact" class="block text-gray-300 hover:text-white transition-colors py-2">
              Free Consultation
            </a>
            <a href="#contact" class="block text-gray-300 hover:text-white transition-colors py-2">
              ðŸ“ž Call Now
            </a>
          </div>
        </div>
        <div>
          <h5 class="text-sm font-semibold mb-3 text-white">Legal & Social</h5>
          <div class="flex flex-col gap-2 items-center lg:items-start">
            <a href="/privacy-policy" class="text-gray-400 hover:text-white transition-colors text-base py-2">
              Privacy Policy
            </a>
            <a href="/terms" class="text-gray-400 hover:text-white transition-colors text-base py-2">
              Terms of Service
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0 w-full">
        <p class="text-gray-400 text-sm text-center md:text-left">
          Â© 2025 {companyData.name}. All rights reserved.
        </p>
        <p class="text-xs text-gray-500 text-center md:text-right mt-2 md:mt-0">
          Made by <a href="https://www.tradesmansites.com" target="_blank" rel="noopener" class="underline hover:text-primary-400">TradesmanSites</a>
        </p>
      </div>
    </div>
  </div>
</footer> 