---
import Layout from '../layouts/Layout.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Contact from './Contact.astro';

interface Props {
  title: string;
  description: string;
  serviceName: string;
  cityName: string;
  countyName: string;
  countyUrl: string;
  cityUrl: string;
  serviceIcon: string;
  serviceDescription: string;
  processSteps: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
  benefits: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
  faqItems: Array<{
    question: string;
    answer: string;
  }>;
}

const { 
  title, 
  description, 
  serviceName, 
  cityName, 
  countyName, 
  countyUrl, 
  cityUrl, 
  serviceIcon, 
  serviceDescription, 
  processSteps, 
  benefits, 
  faqItems 
} = Astro.props;

// Service-specific structured data
const serviceStructuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `${serviceName} ${cityName} GA`,
  "description": serviceDescription,
  "provider": {
    "@type": "LocalBusiness",
    "name": "Lit Noel",
    "url": "https://litnoel.com",
    "telephone": "+14708177453",
    "email": "litnoelteam@gmail.com"
  },
  "areaServed": {
    "@type": "City",
    "name": cityName,
    "containedIn": {
      "@type": "AdministrativeArea",
      "name": countyName,
      "containedIn": {
        "@type": "AdministrativeArea",
        "name": "Georgia"
      }
    }
  },
            "offers": {
            "@type": "Offer",
            "priceCurrency": "USD",
            "availability": "https://schema.org/InStock"
          }
};
---

<Layout title={title} description={description}>
  <!-- Service-specific structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceStructuredData)} />
  
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20">
    <div class="container-max text-center">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
        {serviceName} in {cityName}, GA
      </h1>
      <p class="text-lg md:text-xl mb-8 max-w-3xl mx-auto opacity-90">
        {serviceDescription}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#contact" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Get Free Estimate
        </a>
        <a href="tel:+14708177453" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-primary-600 transition-colors">
          Call (470) 817-7453
        </a>
      </div>
    </div>
  </section>

  <!-- Breadcrumb -->
  <section class="py-4 bg-gray-50">
    <div class="container-max">
      <nav class="text-sm text-gray-600">
        <a href="/" class="hover:text-primary-600">Home</a>
        <span class="mx-2">></span>
        <a href={countyUrl} class="hover:text-primary-600">{countyName}</a>
        <span class="mx-2">></span>
        <a href={cityUrl} class="hover:text-primary-600">{cityName}</a>
        <span class="mx-2">></span>
        <span class="text-gray-900">{serviceName}</span>
      </nav>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center mb-6">
            <div class="bg-primary-50 w-16 h-16 rounded-full flex items-center justify-center mr-4">
              <span class="text-2xl">{serviceIcon}</span>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold">
              Professional {serviceName} in {cityName}
            </h2>
          </div>
          <p class="text-gray-600 text-lg leading-relaxed mb-6">
            <slot name="detailed-description">
              {serviceDescription}
            </slot>
          </p>
          <div class="space-y-4">
            {benefits.map((benefit) => (
              <div class="flex items-start">
                <div class="bg-primary-50 w-8 h-8 rounded-full flex items-center justify-center mr-3 mt-1">
                  <span class="text-sm text-primary-600 font-bold">{benefit.icon}</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">{benefit.title}</h3>
                  <p class="text-gray-600">{benefit.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="bg-gray-50 p-8 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">Service Details</h3>
          <div class="space-y-4">
            <div class="flex justify-between">
              <span class="text-gray-600">Service Area:</span>
              <span class="font-semibold">{cityName}, {countyName}</span>
            </div>

            <div class="flex justify-between">
              <span class="text-gray-600">Response Time:</span>
              <span class="font-semibold">Same Day</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Guarantee:</span>
              <span class="font-semibold">100% Satisfaction</span>
            </div>
          </div>
          <div class="mt-6">
            <a href="#contact" class="w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-primary-700 transition-colors inline-block text-center">
              Get Free Estimate
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-max">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          Our {serviceName} Process
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          We follow a proven process to ensure exceptional results for every {serviceName.toLowerCase()} project in {cityName}.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {processSteps.map((step, index) => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
              <div class="bg-primary-600 text-white w-8 h-8 rounded-full flex items-center justify-center mr-3 text-sm font-bold">
                {index + 1}
              </div>
              <div class="bg-primary-50 w-12 h-12 rounded-full flex items-center justify-center">
                <span class="text-xl text-primary-600 font-bold">{step.icon}</span>
              </div>
            </div>
            <h3 class="text-lg font-semibold mb-2">{step.title}</h3>
            <p class="text-gray-600">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-white">
    <div class="container-max">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          Frequently Asked Questions
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Common questions about our {serviceName.toLowerCase()} services in {cityName}.
        </p>
      </div>
      
      <div class="max-w-3xl mx-auto space-y-4">
        {faqItems.map((faq) => (
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-primary-600 text-white">
    <div class="container-max text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Ready for Professional {serviceName} in {cityName}?
      </h2>
      <p class="text-lg mb-8 opacity-90 max-w-2xl mx-auto">
        Join homeowners and businesses across {cityName} who trust Lit Noel for professional holiday lighting. Get your free estimate today!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#contact" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Get Free Estimate
        </a>
        <a href="tel:+14708177453" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-primary-600 transition-colors">
          Call Now
        </a>
      </div>
    </div>
  </section>

  <Contact />
  <Footer />
</Layout> 