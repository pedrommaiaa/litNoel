---
import { companyData } from '../data/company';
---

<section class="relative overflow-hidden">
  <!-- Background Image with Blur -->
  <div class="absolute inset-0">
    <picture>
      <source srcset="/images/business-hero.webp" type="image/webp">
      <img
        src="/images/business-hero.webp"
        alt="Professional service equipment"
        class="object-cover blur-sm w-full h-full"
        fetchpriority="high"
        width="1920"
        height="1280"
      />
    </picture>
    <!-- Overlay for better text contrast -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900/70 to-gray-800/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 py-20 sm:py-28 lg:py-36">
    <div class="container-max">
      <div class="max-w-5xl mx-auto text-center">
        <!-- Badge -->
        <div class="inline-flex items-center bg-white/90 backdrop-blur-sm text-primary-800 px-4 py-2 rounded-full text-sm font-medium mb-6">
          âœ¨ Licensed & Insured â€¢ Christmas Light Experts âœ¨
        </div>
        
        <!-- Headline -->
        <div class="space-y-6 mb-12">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight text-white">
            <span class="text-gradient bg-gradient-to-r from-red-400 to-green-300 bg-clip-text text-transparent">Brightening Your Holidays</span>{' '}
            Stress-Free
          </h1>
          <p class="text-xl sm:text-2xl max-w-3xl mx-auto text-gray-100 leading-relaxed">
            Professional Christmas light installation and leasing services. We handle everything from design to takedown, so you can enjoy a beautifully lit home without the hassle.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12 max-w-lg sm:max-w-2xl mx-auto px-8">
          <a
            href="#contact"
            class="btn-primary px-5 py-2.5 text-base sm:text-sm md:text-base lg:text-sm xl:text-base rounded-lg font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
            style="min-width: fit-content"
          >
