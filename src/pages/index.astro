---
import Layout from '../layouts/Layout.astro';
import { companyData } from '../data/company.ts';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import HeroDynamic from '../components/HeroDynamic.astro';
import Problems from '../components/Problems.astro';
import ServiceBullets from '../components/ServiceBullets.astro';
import HowItWorks from '../components/HowItWorks.astro';
import AreasStrip from '../components/AreasStrip.astro';
import FAQAccordion from '../components/FAQAccordion.astro';
import ContactSchedule from '../components/ContactSchedule.astro';
---

<Layout title={`${companyData.tagline} | ${companyData.name}`}>
  <main>
    <SiteHeader />
    <div class="pt-12"></div>
    <HeroDynamic
      title="Professional Christmas Light Installation"
      subhead="Custom outdoor Christmas lights installation for homes and businesses, featuring durable, commercial‑grade, energy‑efficient LED lighting, with all‑season maintenance and hassle‑free removal."
    />
    <Problems />
    <ServiceBullets />
    <HowItWorks />
    <AreasStrip />
    <FAQAccordion />
    <ContactSchedule />
    <SiteFooter />
  </main>
  
  
</Layout>