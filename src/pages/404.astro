---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { companyData } from '../data/company';
---

<Layout title="Page Not Found | WaterBoys Pressure Washing">
	<Header />
	
	<!-- 404 Error Section -->
	<main class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 flex items-center justify-center px-4 py-16">
		<div class="max-w-2xl mx-auto text-center">
			<!-- Error Code -->
			<div class="mb-8">
				<h1 class="text-8xl md:text-9xl font-bold text-primary-600 mb-4">404</h1>
				<div class="w-24 h-1 bg-primary-600 mx-auto rounded-full"></div>
			</div>
			
			<!-- Error Message -->
			<div class="mb-12">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
					Oops! Page Not Found
				</h2>
				<p class="text-lg text-gray-600 mb-8 leading-relaxed">
					The page you're looking for seems to have been washed away! ğŸš¿<br/>
					Don't worry - we can help you get back on track.
				</p>
			</div>
			
			<!-- Action Buttons -->
			<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
				<a 
					href="/"
					class="btn-primary inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg transition-all duration-300 hover:transform hover:scale-105 shadow-lg"
				>
					ğŸ  Back to Home
				</a>
				<a 
					href="/#contact"
					class="btn-secondary inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white transition-all duration-300"
				>
					ğŸ“ Get Free Quote
				</a>
			</div>
			
			<!-- Quick Links -->
			<div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
				<h3 class="text-xl font-semibold text-gray-900 mb-6">
					Looking for something specific?
				</h3>
				<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
					<a 
						href="/#services"
						class="flex items-center justify-center p-4 bg-gray-50 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-all duration-300 group"
					>
						<span class="mr-3 text-2xl group-hover:scale-110 transition-transform">âš™ï¸</span>
						<span class="font-medium">Our Services</span>
					</a>
					<a 
						href="/#service-areas"
						class="flex items-center justify-center p-4 bg-gray-50 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-all duration-300 group"
					>
						<span class="mr-3 text-2xl group-hover:scale-110 transition-transform">ğŸ—ºï¸</span>
						<span class="font-medium">Service Areas</span>
					</a>
					<a 
						href={`tel:${companyData.phone}`}
						class="flex items-center justify-center p-4 bg-gray-50 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-all duration-300 group"
					>
						<span class="mr-3 text-2xl group-hover:scale-110 transition-transform">ğŸ“</span>
						<span class="font-medium">Call Now</span>
					</a>
					<a 
						href={`mailto:${companyData.email}`}
						class="flex items-center justify-center p-4 bg-gray-50 rounded-lg hover:bg-primary-50 hover:text-primary-700 transition-all duration-300 group"
					>
						<span class="mr-3 text-2xl group-hover:scale-110 transition-transform">ğŸ“§</span>
						<span class="font-medium">Email Us</span>
					</a>
				</div>
			</div>
			
			<!-- Contact Info -->
			<div class="mt-8 text-gray-600">
				<p class="text-sm">
					Need immediate help? Call us at 
					<a href={`tel:${companyData.phone}`} class="text-primary-600 hover:text-primary-700 font-semibold">
						{companyData.phoneFormatted}
					</a>
				</p>
			</div>
		</div>
	</main>
	
	<Footer />
</Layout>

<style>
	.btn-primary {
		background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
		color: white;
	}
	
	.btn-primary:hover {
		background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
	}
	
	.btn-secondary:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 25px rgba(37, 99, 235, 0.2);
	}
</style> 